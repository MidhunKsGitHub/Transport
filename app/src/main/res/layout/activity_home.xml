<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    tools:context=".View.Activities.HomeActivity">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="-20dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="20dp"
        app:cardElevation="7dp"
        app:cardMaxElevation="7dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:id="@+id/home_c"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ic_home"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    app:srcCompat="@drawable/tachometer_slowest" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/home_bar"
                    android:layout_width="35dp"
                    android:layout_height="4dp"
                    android:layout_marginTop="5dp"
                    app:cardBackgroundColor="@color/primary_blue_dark"
                    app:cardElevation="0dp"
                    app:cardMaxElevation="0dp">

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/expense_c"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ic_expense"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    app:srcCompat="@drawable/comments_dollar" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/expense_bar"
                    android:layout_width="35dp"
                    android:layout_height="5dp"
                    android:layout_marginTop="5dp"
                    android:visibility="invisible"
                    app:cardBackgroundColor="@color/primary_blue_dark"
                    app:cardElevation="0dp"
                    app:cardMaxElevation="0dp">

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/add_c"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ic_add"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    app:srcCompat="@drawable/money_check_edit" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/add_bar"
                    android:layout_width="35dp"
                    android:layout_height="5dp"
                    android:layout_marginTop="5dp"
                    android:visibility="invisible"
                    app:cardBackgroundColor="@color/primary_blue_dark"
                    app:cardElevation="0dp"
                    app:cardMaxElevation="0dp">

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/profile_c"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ic_profile"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/truck" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/profile_bar"
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_marginTop="5dp"
                    android:visibility="invisible"
                    app:cardBackgroundColor="@color/primary_blue"
                    app:cardElevation="0dp"
                    app:cardMaxElevation="0dp">

                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>